<div id="<%= dom_id report %>">
  <p>
    <strong>Name:</strong>
    <%= report.name %>
  </p>

  <p>
    <strong>Columns:</strong>
    <div class= "d-flex flex-wrap">
      <% @columns.each do |column| %>
        <%= link_to column.name, column_activate_path(column),
        class: column.active == true ? "btn btn-primary mx-1" : "btn btn-secondary" %>
      <% end %>
    </div>
  </p>

  <p>
    <strong>Filter:</strong>
    <%= report.filter %>
    <%= render "reports/filter_select" %>  </p>

  <p>
    <strong>Path:</strong>
    <%= report.report_path %>
  </p>

  <p>
    <%= render "reports/report_receivers" %>
  </p>

  <div class="row m2">
    <div class="btn-group">
      <%= link_to "Guardar informes", print_report_path(@report), class: "btn btn-success" %>
    </div>
  </div>
  <div>
    <%= link_to "Guardar informes y emitir", print_send_report_path(@report), class: "btn btn-success" %>
  </div>

</div>

