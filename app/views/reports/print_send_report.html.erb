<div class="shadow m-2 p-3">
  <div class="card m-2 p-3">
    <div class="card-header">
      <h4>The shops receiving the reports are:</h4>
    </div>
    <div class="card-body">
      <ul class="list-group list-group-flush">
        <% @active_printers.each do |ap| %>
          <li class="list-group-item"><%= "#{ap.name} on #{ap.report_path.split('/').last}" %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="card m-2 p-3">
    <div class="card-header">
      <h4>Please, select the account from they are going to be sent:</h4>
    </div>
    <div class="card-body">
      <%= form_with url: final_sending_path do |f| %>
        <div class="m-2">
          <%= f.select "accounts", options_for_select(@accounts), class: "form-select" %>
        </div>
        <div class="m-2">
          <%= f.label :body, "Subject", class: "form-label" %>
          <%= f.text_field :subject, class: "form-control", value: ": Sending #{Date.today.strftime('%Y%m%d')} report" %>
        </div>
        <div class="m-2">
          <%= f.label :body, "Body", class: "form-label" %>
          <%= f.rich_text_area :body, class: "form-control" %>
        </div>
        <div class="row m-2">
          <%= f.submit "Send to Draft Folder", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>