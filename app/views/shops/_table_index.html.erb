<div class="row m-2 p-3">
  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Retailer</th>
      </tr>
    </thead>
    <tbody>
      <% @shops.each do |shop| %>
        <tr>
          <td><%= link_to shop.name, shop %></td>
          <td><%= shop.email %></td>
          <td><%= shop.retailer.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
