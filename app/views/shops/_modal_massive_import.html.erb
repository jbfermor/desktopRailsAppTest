<!-- Button trigger modal -->
<button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#massiveUploadShop">
  Massive Upload
</button>
<!-- Modal -->
<div class="modal fade" id="massiveUploadShop" tabindex="-1" aria-labelledby="massiveUploadShopLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-red" id="massiveUploadShopLabel">Warning!</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-center">
        Excel file must contain 3 columns with the following headers: name : email : name of its retailer
      </div>
      <div class="modal-footer">
        <div><%= link_to "Get data from file", shop_massive_upload_path(customer_id: params[:customer_id]), class: "btn btn-sm btn-success" %></div>
      </div>
    </div>
  </div>
</div>
