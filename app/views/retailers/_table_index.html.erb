<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Customer</th>
    </tr>
  </thead>
  <tbody>
    <% @retailers.each do |retailer| %>
      <tr>
        <td><%= retailer.name %></td>
        <td><%= retailer.email %></td>
        <td><%= retailer.customer.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>